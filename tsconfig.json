{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true,
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noEmitHelpers":  true,
      "importHelpers": true,
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es2017",
        "dom"
      ]
    }
  }
  